<?xml version="1.0"?>
<robot name="sliding_arm">

  <material name="blue"><color rgba="0 0 0.8 1"/></material>
  <material name="grey"><color rgba="0.5 0.5 0.5 1"/></material>

  <link name="world"/>

  <joint name="base_sliding_joint" type="prismatic">
    <parent link="world"/>
    <child link="slider_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="100" lower="-0.127" upper="0.127" velocity="1.0"/>
    <dynamics damping="0.7" friction="0.1"/>
  </joint>

  <link name="slider_link">
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
    <collision>
      <geometry><box size="0.1 0.1 0.1"/></geometry>
    </collision>
    <visual>
      <geometry><box size="0.1 0.1 0.1"/></geometry>
      <material name="grey"/>
    </visual>
  </link>

  <joint name="shoulder_joint" type="revolute">
    <parent link="slider_link"/>
    <child link="arm_link_1"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="100" lower="-3.14" upper="3.14" velocity="1.0"/>
  </joint>

  <link name="arm_link_1">
    <inertial>
      <origin xyz="0 0 0.254"/>
      <mass value="2.0"/>
      <inertia ixx="0.043" ixy="0" ixz="0" iyy="0.043" iyz="0" izz="0.001"/>
    </inertial>
    <collision>
      <origin xyz="0 0 0.254"/>
      <geometry><cylinder length="0.508" radius="0.03"/></geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0.254"/>
      <geometry><cylinder length="0.508" radius="0.03"/></geometry>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="elbow_joint" type="revolute">
    <parent link="arm_link_1"/>
    <child link="arm_link_2"/>
    <origin xyz="0 0 0.508" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="100" lower="-2.5" upper="2.5" velocity="1.0"/>
  </joint>

  <link name="arm_link_2">
    <inertial>
      <origin xyz="0 0 0.254"/>
      <mass value="2.0"/>
      <inertia ixx="0.043" ixy="0" ixz="0" iyy="0.043" iyz="0" izz="0.001"/>
    </inertial>
    <collision>
      <origin xyz="0 0 0.254"/>
      <geometry><cylinder length="0.508" radius="0.03"/></geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0.254"/>
      <geometry><cylinder length="0.508" radius="0.03"/></geometry>
      <material name="blue"/>
    </visual>
  </link>

  <ros2_control name="GazeboSimSystem" type="system">
    <hardware>
      <plugin>gz_ros2_control/GazeboSimSystem</plugin>
    </hardware>
    <joint name="base_sliding_joint">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="shoulder_joint">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="elbow_joint">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
  </ros2_control>

  <gazebo>
    <plugin filename="libgz_ros2_control-system.so" name="gz_ros2_control::GazeboSimROS2ControlPlugin">
      <parameters>$(find arm_description)/config/arm_controllers.yaml</parameters>
    </plugin>
  </gazebo>

</robot>
